@using Microsoft.AspNetCore.Mvc.Localization;
@model List<SalgoTechnik.Domain.Entities.Reference>
@inject IViewLocalizer Localizer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/slide.css">
    <meta name="viewport" content="width=1366">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" charset="UTF-8"></script>
    <title>References</title>
</head>
<body>
    <!--Navigation list-->
    <nav class="nav">
        <div class="container">
            <div class="nav__row">
                <div class="logo">
                    <a asp-action="Index" asp-controller="Home">
                        <img src="/img/logo/group.svg" alt="logo">
                    </a>
                </div>
                <div class="navigation-list">
                    <ul>
                        <li><a asp-action="References" asp-controller="References">@Localizer["Reference"]</a></li>
                        <li><a asp-controller="Weare" asp-action="Page">@Localizer["We are"]</a></li>
                        <li><a asp-controller="Project" asp-action="GetAll">@Localizer["Project"]</a></li>
                        <li><a href="#">@Localizer["Application"]</a></li>
                        <li>
                            <img src="/img/social/Group 175.svg" alt="social">
                            <input type="text" style="border-color: #002C3A; background-color: #002C3A; border-radius: 50px; color: #ffff; width:150px; height:24px;">
                        </li>
                        <li>
                            <a href="">
                                <img src="/img/social/Group 188.svg" style="width: 23px; height: 23px;" alt="social">
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img src="/img/social/Aiga_mail_white.svg.png" style="width: 23px; height: 23px;" alt="social">
                            </a>
                        </li>
                        <li>
                            <a asp-action="ChangeLanguage" asp-controller="References" asp-route-culture="en-US">EN</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!--End Navigation list-->

    <div class="weare__logo__images"></div>

    <div class="logo-projects">
        <div class="container">
            <div class="logo-title" style=" position:absolute; top:400px">
                <img src="/sass/images/logo/group2.svg" style="padding-left: 400px;">
                <p class="title-projects">@Localizer["References"]</p>
            </div>
        </div>
    </div>
    <main>
        <div class="projects">
            <div class="container">
                <div class="projects__row" style="position: absolute; top:500px">
                    @foreach(var x in Model)
                    {
                    <div class="container-projects">
                        <img src="@x.ImageUrl" class="image-projects">
                        <div class="data-projects">
                            <img src="/sass/images/projects/Group 209.svg">
                            <p class="text-data-projects">@x.ConvertedDate</p>
                        </div>
                        <p class="title-text-projects">@x.Name</p>
                        <p class="text-description-projects">@x.Details</p>
                        <button type="button" class="btn-projects">Details<i class="fas fa-angle-right i-projects" style="margin-left: 25px; margin-top: 5px;"></i></button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <footer class="footer" style="top:2000px;">
        <div class="container">
            <div class="footer_row">
                <div class="block1">
                    <img src="/sass/images/logo/group2.svg">
                    <p class="text-descriptin-footer1">
                        @Localizer["Megbízható, szakmailag kompetens, ügyfélorientált partnert keres?"]
                        <span class="colortext">@Localizer["Nálunk megtalálta"].</span>
                    </p>
                </div>
                <div class="block2">
                    <p class="text-title-footer">Kapcsolat</p>
                    <p class="text-number">Call: +36 30 123 45 67</p>
                    <p class="text-number">Email: info@salgotech.com</p>
                    <p class="text-number">Cím: HU-1234 Lorem, Ipsum 12.</p>
                </div>
                <div class="block3">
                    <p class="text-title-footer">@Localizer["Carrier"]</p>
                    <a href="#"><img src="/sass/images/footer/karrier.png"></a>
                </div>
            </div>
            <div class="main__block1__stripe"></div>
            <div class="text__footer">
                <p>© 2022 Salgo-Technik Kft. - adatvédelmi szabályzat</p>
            </div>
            <div class="in__footer">
                <img src="/sass/images/footer/Vector (2).svg">
            </div>
        </div>

    </footer>


</body>
</html>