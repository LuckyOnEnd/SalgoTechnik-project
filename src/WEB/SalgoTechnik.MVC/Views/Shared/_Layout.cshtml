@using SalgoTechnik.Application.Services;
@inject LanguageService language
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SalgoTechnik</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=1366">
    <title>@ViewData["Title"] - Salgo Technik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <nav class="nav">
        <div class="container">
            <div class="nav__row">
                <div class="logo">
                    <a href="">
                        <img src="./img/logo/group.svg" alt="logo">
                    </a>
                </div>
                <div class="navigation-list">
                    <ul>
                        <li><a href="#">@language.GetLocalizedString("Reference")</a></li>
                        <li><a href="#">We are</a></li>
                        <li><a href="#">Projects</a></li>
                        <li><a href="#">Application</a></li>
                        <li>
                            <img src="/img/social/Group 175.svg" alt="social">
                            <input type="text" style="border-color: #002C3A; background-color: #002C3A; border-radius: 50px; color: #ffff; width:150px; height:24px;">
                        </li>
                        <li>
                            <a href="">
                                <img src="./img/social/Group 188.svg" style="width: 23px; height: 23px;" alt="social">
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <img src="./img/social/Aiga_mail_white.svg.png" style="width: 23px; height: 23px;" alt="social">
                            </a>
                        </li>
                        <li>
                            <a asp-action="ChangeLanguage" asp-controller="Home" asp-route-culture="en-US">
                                <img src="./img/social/DE.svg" style="width: 23px; height: 23px;" alt="social">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <partial name="_LoginPartial" />
    </nav>

            @RenderBody();

    <footer class="footer">
        <div class="container">
            <div class="footer_row">
                <div class="block1">
                    <img src="/sass/images/logo/group2.svg">
                    <p class="text-descriptin-footer1">
                        Megbízható, szakmailag kompetens,
                        ügyfélorientált partnert keres?
                        <span class="colortext">Nálunk megtalálta.</span>
                    </p>
                </div>
                <div class="block2">
                    <p class="text-title-footer">Kapcsolat</p>
                    <p class="text-number">Call: +36 30 123 45 67</p>
                    <p class="text-number">Email: info@salgotech.com</p>
                    <p class="text-number">Cím: HU-1234 Lorem, Ipsum 12.</p>
                </div>
                <div class="block3">
                    <p class="text-title-footer">Karrier</p>
                    <a href="#"><img src="/sass/images/footer/karrier.png"></a>
                </div>
            </div>
            <div class="main__block1__stripe"></div>
            <div class="text__footer">
                <p>© 2022 Salgo-Technik Kft. - adatvédelmi szabályzat</p>
            </div>
            <div class="in__footer">
                <img src="/sass/images/footer/Vector (2).svg">
            </div>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
